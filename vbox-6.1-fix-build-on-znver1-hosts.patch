diff -up linux-5.18/drivers/net/vboxnetadp/Makefile-header.gmk.1005~ linux-5.18/drivers/net/vboxnetadp/Makefile-header.gmk
--- linux-5.18/drivers/net/vboxnetadp/Makefile-header.gmk.1005~	2022-07-31 13:12:27.739888615 +0200
+++ linux-5.18/drivers/net/vboxnetadp/Makefile-header.gmk	2022-07-31 13:26:14.337473247 +0200
@@ -45,7 +45,7 @@
 # (We have to support basic cross building (ARCH=i386|x86_64).)
 # While at it, warn about BUILD_* vars found to help with user problems.
 #
-ifeq ($(filter-out x86_64 amd64 AMD64,$(shell rpm --eval %_target_cpu)),)
+ifeq ($(filter-out x86_64 znver1 amd64 AMD64,$(shell rpm --eval %_target_cpu)),)
  BUILD_TARGET_ARCH_DEF := amd64
 else
  BUILD_TARGET_ARCH_DEF := x86
